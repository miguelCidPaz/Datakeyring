	<modelVersion>4.0.0</modelVersion>

	<groupId>com.mcp.datakey</groupId>
	<artifactId>DataKeyring</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<name>DataKeyring</name>
	<description>
